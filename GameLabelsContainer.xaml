<PluginUserControl x:Class="GameLabels.GameLabelsContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLabels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Border Padding="10 2 5 2" Margin="0 1"
                Background="#aed77c" CornerRadius="5 0 0 5" 
                HorizontalAlignment="Right" VerticalAlignment="Top">
            <TextBlock Text="DEMO" FontWeight="Bold" />
        </Border>
        <Border Padding="10 2 5 2" Margin="0 1"
                Background="#9d51aa" CornerRadius="5 0 0 5" 
                HorizontalAlignment="Right" VerticalAlignment="Top">
            <TextBlock Text="DLC" FontWeight="Bold" />
        </Border>
        <Border Padding="10 2 5 2" Margin="0 1"
                Background="#3c6d9d" CornerRadius="5 0 0 5" 
                HorizontalAlignment="Right" VerticalAlignment="Top">
            <TextBlock Text="EARLY" FontWeight="Bold" />
        </Border>
    </StackPanel>
</PluginUserControl>
