<PluginUserControl x:Class="GameLabels.GameLabelsContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLabels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
              xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <ItemsControl>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <VirtualizingStackPanel Orientation="Vertical" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Border Padding="10 2 5 2" Margin="0 1"
                    Background="#aed77c" CornerRadius="5 0 0 5" 
                    HorizontalAlignment="Right" VerticalAlignment="Top">
                    <TextBlock Text="DEMO" FontWeight="Bold" />
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
        <ItemsControl.ItemsSource>
            <x:Array Type="{x:Type sys:String}">
                <sys:String>First Item</sys:String>
                <sys:String>Second Item</sys:String>
            </x:Array>
        </ItemsControl.ItemsSource>
    </ItemsControl>
</PluginUserControl>
